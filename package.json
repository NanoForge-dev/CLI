{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nanoforge-dev/cli",
  "version": "0.0.0",
  "description": "NanoForge CLI",
  "keywords": [
    "nanoforge",
    "game",
    "cli"
  ],
  "homepage": "https://github.com/NanoForge-dev/CLI#readme",
  "bugs": "https://github.com/NanoForge-dev/cli/issues",
  "license": "MIT",
  "contributors": [
    "Bill <timothe.jacquot@epitech.eu>",
    "Exelo <exelo.corp@gmail.com>",
    "Fexkoser <martin.fillon@epitech.eu>",
    "Tchips <leo.outmizguine@epitech.eu>"
  ],
  "files": [
    "dist/nf.js"
  ],
  "main": "./dist/nf.js",
  "bin": {
    "nf": "dist/nf.js"
  },
  "type": "module",
  "directories": {
    "lib": "src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NanoForge-dev/CLI.git"
  },
  "funding": "",
  "scripts": {
    "build": "tsc --noEmit && tsup",
    "lint": "prettier --check . && eslint --format=pretty src",
    "format": "prettier --write . && eslint --fix --format=pretty src",
    "prepack": "pnpm run build && pnpm run lint",
    "changelog": "git cliff --prepend ./CHANGELOG.md -u -c ./cliff.toml -r . --include-path '.'",
    "release": "cliff-jumper",
    "prepare": "husky"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "@nanoforge-dev/loader-client": "^0.0.2",
    "@nanoforge-dev/loader-server": "^0.0.2",
    "ansis": "^4.2.0",
    "chokidar": "^4.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "node-emoji": "^2.2.0",
    "ora": "^9.0.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.0",
    "@favware/cliff-jumper": "^6.0.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-pretty": "^7.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "taze": "^19.9.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": "24.11.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write"
    ],
    "src/**/*.ts": [
      "eslint --fix"
    ]
  }
}
